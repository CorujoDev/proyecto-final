import discord
from discord.ext import commands 
import random
imagenes = ["Si quieres ver el contenido de esta carpeta entra al serverðŸ˜‰"]
lista_ideas = ["Si quieres ver el contenido de esta carpeta entra al serverðŸ˜‰"]
emoji_eco = ["Si quieres ver el contenido de esta carpeta entra al serverðŸ˜‰"]
# La variable intents almacena los privilegios del bot
intents = discord.Intents.default()
# Activar el privilegio de lectura de mensajes
intents.message_content = True
# Crear un bot en la variable cliente y transferirle los privilegios
bot = commands.Bot(command_prefix='$', intents=intents)

@bot.event
async def on_ready():
    print(f'Hemos iniciado sesiÃ³n como {bot.user}')

@bot.command()
async def hola(ctx):
    await ctx.channel.send("Hola! te enseÃ±are del cambio climatico")

@bot.command()
async def adios(ctx):
    await ctx.channel.send("Adios!")
     
@bot.command()
async def comere(ctx):
    await ctx.channel.send("Okey te espero amigo")


@bot.command()
async def libro(ctx):
    await ctx.channel.send("Si quieres ver esto entra al serverðŸ˜‰")


@bot.command()
async def tips(ctx):
    await ctx.channel.send("Si quieres ver esto entra al serverðŸ˜‰")

@bot.command()
async def explicacion(ctx):
    await ctx.channel.send("Si quieres ver esto entra al serverðŸ˜‰")

@bot.command()
async def ideas(ctx):
    idea = random.choice(lista_ideas)
    await ctx.channel.send(f"esta es una idea:{idea}")

@bot.command()
async def imagen(ctx):
    imagene = random.choice(imagenes)
    await ctx.channel.send(f"esta es una imagen que ayudara:{imagene}")


@bot.command()
async def emojis(ctx):
    emoji = random.choice(emoji_eco)
    await ctx.channel.send(f"{emoji}")


bot.run("Es confidencial")
